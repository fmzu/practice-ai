{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"linter": {
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": "error"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"options": {
						"attributes": ["className"],
						"functions": ["cn"]
					}
				}
			}
		}
	},
	"formatter": {
		"indentStyle": "space",
		"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
